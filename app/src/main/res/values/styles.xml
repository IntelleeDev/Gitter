<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SocialProfileTextStyle">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
        <item name="fontPath">fonts/Raleway-Bold.ttf</item>
    </style>

    <style name="ProfileLabelTextStyle" parent="SocialProfileTextStyle">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="BrowserLinkStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="fontPath">fonts/Raleway-Italic.ttf</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ProfileDataTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textColor">@color/color_black</item>
    </style>
    
    <style name="SocialProfileNumberStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="CustomThemeOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>

    <style name="LargeHelloText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontPath">fonts/Raleway-Light.ttf</item>
    </style>

    <style name="AppDescriptionText" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="WelcomeButtonStyle">
        <item name="android:left">25dp</item>
        <item name="android:right">25dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textColor">@color/color_white_alpha</item>
    </style>

</resources>
